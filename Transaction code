mysqli_begin_transaction($link);
        try{
            mysqli_query($link,"INSERT INTO users (username, email, password, citizenship) VALUES ('$username', '$useremail, '$password','$citizenship')");
            mysqli_commit($link);    
        }
    

        catch(PDOException $e)
        {
            mysqli_rollback($link);
            echo $e -> getmessage();
        }
